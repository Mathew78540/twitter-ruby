<div class="user_card" style="">
    <div class="avatar">
      <img src="<%= account.avatar%>" alt="">
    </div>
    <div class="infos_user">
      <p>
        <a href="/account/<%= account.username %>">
          <%= account.firstname %>
          <%= account.lastname %>
          <span>
            @<%= account.username %>
          </span>
        </a>
        <br>
        <span>
          <a href="/account/<%= account.username %>/following">
            <%= account.following.count %> following
          </a>
        </span>
        <span>-</span>
        <span>
            <a href="/account/<%= account.username %>/followers">
              <%= account.follower.count %> followers
            </a>
        </span>
      </p>
    </div>
</div>
